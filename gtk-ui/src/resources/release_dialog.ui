<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="AddReleaseDialog" parent="GtkDialog">
  <property name="title" translatable="yes">Add or Edit Release</property>
    <child internal-child="content_area">
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <property name="spacing">12</property>
        <property name="margin-top">12</property>
        <property name="margin-bottom">12</property>
        <property name="margin-start">12</property>
        <property name="margin-end">12</property>
        <child>
          <object class="GtkLabel">
            <property name="label" translatable="yes">Release Name:</property>
            <property name="halign">start</property>
          </object>
        </child>
        <child>
	    <object class="GtkEntry" id="release_name_entry">
            <property name="placeholder-text" translatable="yes">Enter release name</property>
          </object>
        </child>
	<child>
	    <object class="GtkDropDown" id="system_dropdown"/>
	  </child>
	  <child>
	    <object class="GtkButton" id="add_system_button">
	      <property name="label">Add System</property>
	    </object>
	  </child>
	  <child>
	    <object class="GtkButton" id="select_system_button">
	      <property name="label">Select System</property>
	    </object>
	  </child>
	  <child>
	    <object class="GtkListBox" id="selected_systems_list"/>
	  </child>
	</object>
    </child>
    <child type="action">
      <object class="GtkButton">
        <property name="label" translatable="yes">Cancel</property>
      </object>
    </child>
    <child type="action">
      <object class="GtkButton">
        <property name="label" translatable="yes">Add</property>
      </object>
    </child>
  </template>
</interface>

